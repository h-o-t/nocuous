{
  "name": "nocuous",
  "version": "0.4.0",
  "description": "A static code analysis tool for JavaScript and TypeScript.",
  "main": "index.js",
  "bin": {
    "nocuous": "./index.js"
  },
  "repository": "https://github.com/kitsonk/nocuous",
  "author": "Kitson Kelly <me@kitsonkelly.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.18.0"
  },
  "private": false,
  "files": [
    "index.js",
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "clean": "rimraf lib",
    "lint": "yarn eslint --ignore-pattern fixtures \"./{src,tests}/**/*.ts\"",
    "preversion": "yarn build",
    "test": "nyc ava"
  },
  "dependencies": {
    "chalk": "4.0.0",
    "table": "5.4.6",
    "ts-morph": "7.1.0",
    "tslib": "2.0.0",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@types/node": "14.0.9",
    "@types/table": "5.0.0",
    "@types/tmp": "^0.2.3",
    "@types/yargs": "15.0.5",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "ava": "3.8.2",
    "eslint": "7.1.0",
    "eslint-config-airbnb-typescript-prettier": "2.1.1",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "rimraf": "3.0.2",
    "tmp": "^0.2.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.3"
  },
  "ava": {
    "files": [
      "tests/unit/**/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
