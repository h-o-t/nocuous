{
  "name": "nocuous",
  "version": "0.0.1",
  "description": "A static code analysis tool for JavaScript and TypeScript.",
  "main": "index.js",
  "bin": {
    "nocuous": "./index.js"
  },
  "repository": "https://github.com/kitsonk/nocuous",
  "author": "Kitson Kelly <me@kitsonkelly.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "index.js",
    "LICENSE",
    "README.md",
    "lib/"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "prepare": "npm-run-all build",
    "test": "nyc ava"
  },
  "dependencies": {
    "chalk": "3.0.0",
    "ts-morph": "7.0.0",
    "table": "5.4.6",
    "tslib": "1.11.1",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@types/node": "13.9.2",
    "@types/table": "4.0.7",
    "@types/yargs": "15.0.4",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "ava": "3.5.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "ts-node": "8.7.0",
    "typescript": "3.8.3"
  },
  "ava": {
    "files": [
      "tests/unit/**/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
