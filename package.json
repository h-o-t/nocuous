{
  "name": "nocuous",
  "version": "0.0.1",
  "description": "A static code analysis tool for JavaScript and TypeScript.",
  "main": "index.js",
  "bin": {
    "nocuous": "./index.js"
  },
  "repository": "https://github.com/kitsonk/nocuous",
  "author": "Kitson Kelly <me@kitsonkelly.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "index.js",
    "LICENSE",
    "README.md",
    "lib/"
  ],
  "scripts": {
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:test": "tsc -p tsconfig.tests.json",
    "clean": "rimraf lib output",
    "copy": "cpx \"{src,tests}/**/*.{js,html,css,json}\" output & cpx package.json output",
    "precommit": "lint-staged",
    "prepare": "npm-run-all build:lib",
    "test": "npm-run-all clean build:test copy test:intern",
    "test:intern": "intern"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "ts-morph": "^3.1.3",
    "tslib": "^1.10.0",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "@types/chai-as-promised": "7.1.0",
    "@types/node": "^12.0.12",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "3.2.2",
    "@types/table": "^4.0.6",
    "@types/yargs": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cpx": "^1.5.0",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.4",
    "intern": "^4.4.3",
    "lint-staged": "^9.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "sinon": "^7.4.1",
    "sinon-chai": "^3.3.0",
    "table": "^5.4.6",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
