  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "inlineSources": true,
    "module": "commonjs",
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["node"]
  },
  "include": ["cli.js", "index.js", "src/**/*.ts"]
}
