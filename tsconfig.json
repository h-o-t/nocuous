{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["chai-as-promised", "intern", "node", "sinon-chai"]
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
